<html>

<head>

  
  
</head>
<%- include('./partials/header.ejs');%>

<body>
  <div class="container" >
    <div class="row">
        <% for(let i=0;i<data.length; i++){%>
        <div class="col-md-4">
          <div class="card text-center" style="width: 20rem; background-color: rgb(160, 194, 194);">
            <img
              src="<%=data[i].imag%>" style="height: 200px; width:auto"  class="card-img-top" alt="...">
            <div class="card-body">
              <hr>
              <h5 class="card-title"><%=data[i].name%></h5>
              <p class="card-text"><%=data[i].price%></p>
              <p class="card-text"><%=data[i].quantity%></p>
              <p class="card-text"><%=data[i].description%></p>
              <div class="btn-group">
                <a href="editproduct/<%=data[i]._id%>" class="btn btn-success">edit</a>&nbsp;&nbsp;&nbsp;
                <a href="deleteproduct/<%=data[i]._id%>" class="btn btn-danger">delete</a>
              </div>
            </div>
          </div>
        </div>
      <%}%>
      </div>
    </div>
  </div>

</body>

</html>